<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/app_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#BAECF3">


        <ImageButton
            android:id="@+id/imageView44"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="5dp"
            android:background="#BAECF3"
            android:onClick="homepage"
            android:scaleType="fitXY"
            android:src="@drawable/house_outline" />

        <ImageButton
            android:id="@+id/search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:background="#BAECF3"
            android:onClick="search"
            android:scaleType="fitXY"
            android:src="@drawable/search" />

        <ImageButton
            android:id="@+id/Goto_order"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:background="#BAECF3"
            android:onClick="orderlist"
            android:scaleType="fitXY"
            android:src="@drawable/check_form" />

        <ImageButton
            android:id="@+id/imageView48"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@id/imageView48"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:background="#BAECF3"
            android:scaleType="fitXY"
            android:src="@drawable/user" />


    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="60dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            tools:context=".FillOrder"
            >

            <TextView
                android:id="@+id/show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="訂單填寫"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginTop="20dp"
                android:textSize="30dp" />


            <LinearLayout
                android:id="@+id/activity_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="專案名稱："
                        android:textColor="#000000"
                        android:layout_marginLeft="20dp"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/Text_name"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="請輸入專案名稱"
                        android:gravity="left"
                        android:inputType="text"
                        android:singleLine="true"
                        android:layout_marginLeft="5dp"
                        android:maxLength="6" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="日　　期："
                        android:textColor="#000000"
                        android:layout_marginLeft="20dp"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/Text_time"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="left"
                        android:singleLine="true"
                        android:hint="請輸入日期"
                        android:layout_marginLeft="5dp"
                        android:inputType="date"
                        android:maxLength="15" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView54"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="地　　點："
                        android:textColor="#000000"
                        android:layout_marginLeft="20dp"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/Text_place"
                        android:layout_width="230dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:ems="10"
                        android:gravity="left"
                        android:singleLine="true"
                        android:hint="請輸入地點"
                        android:inputType="text"
                        android:maxLength="15" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="聯絡電話："
                        android:textColor="#000000"
                        android:layout_marginLeft="20dp"
                        android:textSize="20dp" />
                    <EditText
                        android:id="@+id/Text_phone"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:ems="13"
                        android:gravity="left"
                        android:singleLine="true"
                        android:hint="（xxxx-xxx-xxx）"
                        android:layout_marginLeft="5dp"
                        android:inputType="phone"
                        android:maxLength="10" />

                </LinearLayout>



                <EditText
                    android:id="@+id/Text_detail"
                    android:layout_width="370dp"
                    android:layout_height="134dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="備註（或備案）"
                    android:inputType="textMultiLine"
                    android:singleLine="false"
                    android:background="@drawable/radius"
                    android:maxLength="100" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="最終價格："
                        android:textColor="#000000"
                        android:layout_marginLeft="20dp"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/Text_price"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="left"
                        android:hint="請輸入最終價格"
                        android:inputType="number"
                        android:singleLine="true"
                        android:layout_marginLeft="5dp"
                        android:maxLength="6" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/clear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/radius"
                        android:text="清空" />

                    <Button
                        android:id="@+id/submit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/radius"
                        android:text="確認" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>